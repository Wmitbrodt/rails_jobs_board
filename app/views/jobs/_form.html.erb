<%= simple_form_for(@job, html: { class: 'form-horizontal' }) do |f| %>
	<%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "Choose a category" }, input_html: { class: "dropdown-toggle" } %>  <!-- collect categories by id, and look through each -->
	<%= f.input :title, label: "Job Title", input_html: { class: "form-control" } %>
	<%= f.input :description, label: "Job Description", input_html: { class: "form-control" } %>
	<%= f.input :company, label: "Company's name", input_html: { class: "form-control" } %>
	<%= f.input :url, label: "Website's url", input_html: { class: "form-control" } %> <br/>

	<%= f.button :submit %>
	
<% end %>