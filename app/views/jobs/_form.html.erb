<%= simple_form_for(@job, html: { class: 'form-horizontal' }) do |f| %>
	<%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "Choose a category" } %>  <!-- collect categories by id, and look through each -->
	<%= f.input :title, label: "Job Title" %>
	<%= f.input :description, label: "Job Description" %>
	<%= f.input :company, label: "Company's name" %>
	<%= f.input :url, label: "Website's url" %> <br/>

	<%= f.button :submit %>
	
<% end %>